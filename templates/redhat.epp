<% | 
  Integer[1]          $port,
  String[1]           $rsakey,
  String[1]           $dsskey,
  Integer             $receive_window,
  Optional[String[1]] $banner,
  Optional[String[1]] $extra_args
| -%>
<%
  $b = if $banner {
    "-b ${banner}"
  }
  $opts = [
    "-p ${port}",
    "-r ${rsakey}",
    "-d ${dsskey}",
    "-W ${receive_window}",
    $b,
    $extra_args
  ]
  $opt_str = $opts.delete_undef_values.join(' ')
-%>
OPTIONS="<%= $opt_str %>"
